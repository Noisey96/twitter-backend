{
	"name": "twitter-clone-backend",
	"version": "0.1.0",
	"scripts": {
		"db:generate": "drizzle-kit generate:pg --schema ./src/db/schema.ts --out ./migrations/",
		"db:deploy": "ts-node --files src/db/migrate.ts",
		"dev": "nodemon src/index.ts",
		"build": "tsc",
		"start": "npm run build && node build/index.js"
	},
	"dependencies": {
		"@aws-sdk/client-ses": "^3.332.0",
		"@neondatabase/serverless": "^0.4.8",
		"dotenv": "^16.0.3",
		"drizzle-orm": "^0.26.1",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.0",
		"postgres": "^3.3.4"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "^20.1.3",
		"@types/pg": "^8.10.1",
		"drizzle-kit": "^0.18.1",
		"nodemon": "^2.0.22",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"private": true
}
